<%- include('partials/header.ejs') %>

<div class="container">
    <h1>Create a new blog</h1>

    <form action="/submit" method="POST">
        <div class="form-label">
            <label class="blog-input input-title" for="pTitle">Title:</label>
        </div>
        <div class="form-input">
            <input type="text" id="pTitle" name="pTitle" minlength="2" required>
        </div>

        <div class="form-label">
            <label class="blog-input input-content" for="pContent">Content:</label>
        </div>
        <div class="form-input">
            <textarea type="text" id="pContent" name="pContent" rows="15" maxlength="2000" required></textarea>
            <p class="form-condition">Max characters: 2000</p>
        </div>

        <button type="submit" class="post-btn">Post</button>
    </form>
</div>

<%- include('partials/footer.ejs') %>